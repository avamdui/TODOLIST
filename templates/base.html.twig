<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="">
		<meta name="author" content="">
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet"/>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
		<link href="{{ asset('css/style.css') }}" rel="stylesheet">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=League+Gothic&family=Roboto:wght@300&display=swap" rel="stylesheet">
		<title>To Do List app</title>
		{% block stylesheets %}{% endblock %}
	</head>

	<div class="d-flex flex-column min-vh-100">
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark text-white" style="z-index: 2000;">
			<div
				class="container-fluid">
				<!-- Navbar brand -->
				<div class="navbar-header">
					<a class="navbar-brand" href="{{ path ('homepage') }}">To Do List app</a>
					<img src="{{ asset('img/Logo_OpenClassrooms.png') }}" alt="OpenClassrooms"/>
				</div>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link" href="{{ path ('task_list') }}">Taches</a>
						</li>
						{% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('task_user_list', {'id': app.user.id } )}}">
									<i class="fas fa-user"></i>
									Mes taches</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href=" {{ path('logout') }}">
									<i class="fas fa-sign-out-alt"></i>DÃ©connexion
								</a>
							</li>
						{% else %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path ('login') }}">Connexion</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path ('app_register') }}">Enregistrement</a>
							</li>
						{% endif %}
					</ul>
				</li>
			</div>
		</nav>

		<!-- Page Content -->
		{% block header_title %}{% endblock %}

		{% block header_img %}
			<div class="container"><img class="slide-image" src="{{ asset('img/todolist_homepage.jpg') }}" alt="todo list"></div>
			<!-- flash_message -->
			<div class="row">
				<div class="col-md-12">
					{% for flash_message in app.session.flashBag.get('success') %}
						<div class="alert alert-success" role="alert">
							<strong>Superbe !</strong>
							{{ flash_message }}
						</div>
					{% endfor %}
					{% for flash_message in app.session.flashBag.get('error') %}
						<div class="alert alert-danger" role="alert">
							<strong>Oops !</strong>
							{{ flash_message }}
						</div>
					{% endfor %}
				</div>
			</div>

		{% endblock %}

		{% block body %}{% endblock %}
		<br>
		<footer class="footer mt-auto navbar navbar-dark bg-dark text-white justify-content-center">
			<div class="container-fluid ">
				<p class="pull-right">Copyright &copy; OpenClassrooms</p>
			</div>
		</footer>
	</div>
	{% block javascripts %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
		<script src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/45226/dragula.min.js'></script>
		<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
	{% endblock %}
</html>
