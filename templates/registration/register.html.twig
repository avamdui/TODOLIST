{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}


{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}
	{% for message in app.flashes('success') %}
		<br>
		<div class="alert alert-success">
			{{ message }}
		</div>
		<br>
	{% endfor %}
	{% for message in app.session.flashBag.get('success') %}
		<div class="alert alert-success" role="alert">
			<strong>Superbe !</strong>
			{{ message }}
		</div>
	{% endfor %}
	{% for message in app.session.flashBag.get('error') %}
		<div class="alert alert-danger" role="alert">
			<strong>Oops !</strong>
			{{ message }}
		</div>
	{% endfor %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}
	<main class="container mt-5 mb-5">
		<section class="mx-auto col-md-5">
			<h1 class="text-center mb-5">Inscription</h1>

			{{ form_start(registrationForm, {"attr": {'class': 'form_group'}}) }}
			{{ form_row(registrationForm.username, {
                
                "label": "Nom utilisateur",
                "attr": {
                    "placeholder": "Nom utilisateur",
                    "name": "UsernameTEST",
                    'class': 'form-control'
                },
                "label_attr": {
                    'class': 'mt-2'
                }
            }) }}
			{{ form_row(registrationForm.email, {
                "label": "Email",
                "attr": {
                    "placeholder": "Email",
                    'class': 'form-control'
                },
                "label_attr": {
                    'class': 'mt-2'
                }
            }) }}
			{{ form_row(registrationForm.plainPassword, {
                "label": "Mot de passe",
                "attr": {
                    'placeholder': 'Mot de passe',
                    'class': 'form-control'
                },
                "label_attr": {
                    'class': 'mt-2'
                }
            }) }}
			{{ form_row(registrationForm.plainPassword_confirm, {
                "label": "Répétez votre mot de passe",
                "attr": {
                    'placeholder': 'Répétez votre mot de passe',
                    'class': 'form-control'
                },
                "label_attr": {
                    'class': 'mt-2'
                }
            }) }}
			{{ form_row(registrationForm.agreeTerms, {
                "label": "En vous inscrivant, vous confirmez avoir lu, compris et accepter les Conditions d'utilisation et la
        Politique de confidentialité ainsi qu'être informé(e) de votre droit à l'information.",
                "attr": {
                    'class': 'mb-5'
                },
                "label_attr": {
                    'class': 'mt-5'
                }
            }) }}

			<button type="submit" class="btn btn-dark">S'incrire</input>
			{{ form_end(registrationForm) }}
		</section>
	</main>
{% endblock %}
