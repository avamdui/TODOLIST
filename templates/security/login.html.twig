{% extends 'base.html.twig' %}

{% block body %}
	{% if error %}
		<div class="alert alert-danger mb-2">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	{% for message in app.flashes('success') %}
		<br>
		<div class="alert alert-success">
			{{ message }}
		</div>
		<br>
	{% endfor %}
	{% for message in app.session.flashBag.get('success') %}
		<div class="alert alert-success" role="alert">
			<strong>Superbe !</strong>
			{{ message }}
		</div>
	{% endfor %}
	{% for message in app.session.flashBag.get('error') %}
		<div class="alert alert-danger" role="alert">
			<strong>Oops !</strong>
			{{ message }}
		</div>
	{% endfor %}
	<br>
	<div class="row justify-content-center">
		<div class="col-md-10 col-md-offset-1 mb-4">
			<h1>Connexion</h1>
			<form action="{{ path('login') }}" method="POST">
				<div class="form-group">
					<input class="form-control" placeholder=" Adresse email..." type="text" name="_username" requiered>
				</div>
				<br>
				<div class="form-group">
					<input class="form-control" placeholder=" Mot de passe..." type="password" name="_password" requiered>
				</div>
				<br>
				<div class="form-group">
					<button type="submit" class="btn btn-success">
						Connexion !
					</button>
				</div>
			</form>
		</div>
	</div>

{% endblock %}
