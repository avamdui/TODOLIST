{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">
	<link href="{{ asset('css/kanban.css') }}" rel="stylesheet">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet"/>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link href="{{ asset('css/style.css') }}" rel="stylesheet">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=League+Gothic&family=Roboto:wght@300&display=swap" rel="stylesheet">
{% endblock %}


{% block body %}
	<body>
		<header>
			<nav>
				<div class="nav-wrapper" style="background-color: #1B809E">
					<a href="#" class="brand-logo center">Todo List</a>
				</div>
			</nav>
		</header>
		<section class="container">
			<div class="row">
				<div class="col s4">
					<div class="col s12 m12">
						<div class="card red">
							<div class="card-content white-text">
								<span class="card-title center">TODO (<span onload="app.countTasks()" class="count"></span>)</span>
							</div>
							<div class="collection sorted-list" id="todo" onload="app.addJobsToList('todo',jobName)">
								<div class="hidden"></div>
								<div class="center white plus_jobs">
									<a class="btn-floating btn-medium waves-effect waves-light" onclick="app.plusTasks('todo')" style="background-color: #26a69a;">
										<i class="material-icons">add</i>
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col s4">
					<div class="col s12 m12">
						<div class="card blue">
							<div class="card-content white-text">
								<span class="card-title center">IN PROGRESS (<span onload="app.countTasks()" class="count"></span>)</span>
							</div>
							<div class="collection sorted-list" id="inprogress" onload="app.addJobsToList('inprogress',jobName)">

								<div class="hidden"></div>
								<div class="center white plus_jobs">
									<a class="btn-floating btn-medium waves-effect waves-light" onclick="app.plusTasks('inprogress')" style="background-color: #26a69a;">
										<i class="material-icons">add</i>
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col s4">
					<div class="col s12 m12">
						<div class="card green">
							<div class="card-content white-text">
								<span class="card-title center">DONE (<span onload="app.countTasks()" class="count"></span>)</span>
							</div>
							<div class="collection sorted-list" id="done" onload="app.addJobsToList('done',jobName)">


								<div class="hidden"></div>
								<div class="center white plus_jobs">
									<a class="btn-floating btn-medium waves-effect waves-light" onclick="app.plusTasks('done')" style="background-color: #26a69a;">
										<i class="material-icons">add</i>
									</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<!-- Modal Structure -->
			<div id="modal-confirm" class="modal modal-fixed-footer">
				<div class="modal-content">
					<h4>Confirm Delete</h4>
					<p>Are you sure to delete this job?</p>
				</div>
				<div class="modal-footer">
					<a href="#!" id="btn-delete" class="waves-effect waves-light btn">Agree</a>
					<a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Ignore</a>
				</div>
			</div>
		</section>
	</body>Â²
{% endblock %}


{% block javascripts %}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.js"></script>
	<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>

	<script type="text/javascript" src="{{ asset('js/script.js') }}"></script>
{% endblock %}
